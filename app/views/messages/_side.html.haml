#sideBar
  .side_header
    .user_info
      %p.user_name
        = current_user.name
      %ul.user_menu
        %li.user_menu__list 
          = link_to new_group_path do
            = fa_icon "pencil-square-o", class: "icon"
        %li.user_menu__list
          = link_to edit_user_path(current_user) do
            = fa_icon "cog", class: "icon"

  .titles
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .titles__block.titles__block__group_name
          = group.name
        .titles__block.titles__block__latest_post 
          メッセージはまだありません。
        
    